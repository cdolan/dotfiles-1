[global/wm]
	margin-top = 0
	margin-bottom = 0

[settings]
	throttle-output = 5
	throttle-output-for = 10
	throttle-input-for = 30

[colors]
	foreground = ${xrdb:foreground}
	background = ${xrdb:background}

	black = ${xrdb:color8}
	red = ${xrdb:color1}
	green = ${xrdb:color2}
	yellow = ${xrdb:color3}
	blue = ${xrdb:color4}
	magenta = ${xrdb:color5}
	cyan = ${xrdb:color6}

[bar/base]
	monitor = ${env:MONITOR:eDP1}
	monitor-fallback = ${env:MONITOR:DP1}

	fixed-center = true
	override-redirect = true

	dpi-x = 0
	dpi-y = 0

	offset-y = 2%

	height = 24

	radius = 12

	background = ${colors.background}
	foreground = ${colors.foreground}

	border-size = 0
	border-color = ${colors.background}

	line-size = 0
	line-color = ${colors.background}

	padding-left = 0
	padding-right = 0

	module-margin-left = 1
	module-margin-right = 1

	font-0 = "Roboto Mono:size=12:weight=regular;1"
	font-1 = "Font Awesome 5 Free:size=12:weight=bold;1"
	font-2 = "Font Awesome 5 Brands:size=12;1"

[bar/top]
	inherit = bar/base
	bottom = false

	offset-x = 81%
	width = 18%

	modules-center = pulseaudio battery wifi time

[module/i3]
	type = internal/i3
	format = <label-state>
	index-sort = true
	wrapping-scroll = false
	enable-click = true
	pin-workspaces = true
	strip-wsnumbers = true

	ws-icon-default = 

	label-focused = %icon%
	label-focused-foreground = ${colors.foreground}
	label-focused-background = ${colors.background}
	label-focused-padding = 1

	label-unfocused = %icon%
	label-unfocused-foreground = ${colors.black}
	label-unfocused-background = ${colors.background}
	label-unfocused-padding = 1

	label-urgent = %icon%
	label-urgent-foreground = ${colors.red}
	label-urgent-background = ${colors.background}
	label-urgent-padding = 1

[module/cpu]
	type = internal/cpu
	interval = 1

	format = <label>
	format-prefix = 
